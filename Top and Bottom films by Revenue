SELECT A.title as title,
A.rating,
A.release_year,
A.rental_duration,
A.rental_rate,
A.length,
H.name AS language,
G.name AS category,
COUNT(DISTINCT(D.rental_id)) AS times_rented,
SUM(E.amount) AS total_revenue_amount
FROM film A
INNER JOIN inventory C ON A.film_id = C.film_id
INNER JOIN rental D ON D.inventory_id = C.inventory_id
INNER JOIN payment E ON E.rental_id = D.rental_id
INNER JOIN film_category F ON F.film_id = A.film_id
INNER JOIN category G ON G.category_id = F.category_id
INNER JOIN language H ON H.language_id = A.language_id
